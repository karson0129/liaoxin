<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/em_common_title_bar_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleBarTitle="聊信号安全"
        android:background="@color/white"
        app:titleBarDisplayHomeAsUpEnabled="true"/>

    <com.hyphenate.liaoxin.common.widget.ArrowItemView
        android:id="@+id/item_security"
        android:layout_width="0dp"
        android:layout_height="53dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:arrowItemTitle="@string/em_set_security"
        app:arrowItemContent="123"
        app:arrowItemTitleSize="17dp"
        app:arrowItemContentColor="#666666"
        app:arrowItemTitleColor="#1F242E"
        app:arrowItemShowArrow="false"
        app:arrowItemShowDivider="false"
        app:arrowItemShowAvatar="false"
        android:foreground="@drawable/demo_ripple_click_gray"
        android:background="@color/white"/>

    <com.hyphenate.liaoxin.common.widget.ArrowItemView
        android:id="@+id/item_notification"
        android:layout_width="0dp"
        android:layout_height="53dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_privacy"
        app:arrowItemAvatarHeight="@dimen/em_about_me_avatar_size"
        app:arrowItemAvatarWidth="@dimen/em_about_me_avatar_size"
        app:arrowItemTitle="推送消息设置"
        app:arrowItemTitleColor="#1F242E"
        app:arrowItemTitleSize="17dp"
        app:arrowItemShowDivider="true"
        android:foreground="@drawable/demo_ripple_click_gray"
        android:background="@color/white"/>

    <com.hyphenate.liaoxin.common.widget.ArrowItemView
        android:id="@+id/item_common_set"
        android:layout_width="0dp"
        android:layout_height="53dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_notification"
        app:arrowItemTitle="@string/em_set_common_set"
        app:arrowItemTitleColor="#1F242E"
        app:arrowItemTitleSize="17dp"
        app:arrowItemShowDivider="false"
        android:foreground="@drawable/demo_ripple_click_gray"
        android:background="@color/white"/>

    <com.hyphenate.liaoxin.common.widget.ArrowItemView
        android:id="@+id/item_privacy"
        android:layout_width="0dp"
        android:layout_height="53dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_security"
        android:layout_marginTop="10dp"
        app:arrowItemTitle="@string/em_set_privacy"
        app:arrowItemTitleColor="#1F242E"
        app:arrowItemTitleSize="17dp"
        app:arrowItemShowDivider="true"
        android:foreground="@drawable/demo_ripple_click_gray"
        android:background="@color/white"/>

    <com.hyphenate.liaoxin.common.widget.ArrowItemView
        android:id="@+id/item_help"
        android:layout_width="0dp"
        android:layout_height="53dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_common_set"
        android:layout_marginTop="10dp"
        app:arrowItemTitle="帮助与反馈"
        app:arrowItemTitleColor="#1F242E"
        app:arrowItemTitleSize="17dp"
        app:arrowItemShowDivider="true"
        android:foreground="@drawable/demo_ripple_click_gray"
        android:background="@color/white"/>

    <com.hyphenate.liaoxin.common.widget.ArrowItemView
        android:id="@+id/item_about_us"
        android:layout_width="0dp"
        android:layout_height="53dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_help"
        app:arrowItemTitle="关于我们"
        app:arrowItemTitleColor="#1F242E"
        app:arrowItemTitleSize="17dp"
        app:arrowItemShowDivider="false"
        android:foreground="@drawable/demo_ripple_click_gray"
        android:background="@color/white"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="@dimen/em_common_item_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_about_us"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:text="@string/button_logout"
        android:textColor="@color/em_color_common_text_black"
        android:textSize="@dimen/em_size_normal" />

</androidx.constraintlayout.widget.ConstraintLayout>