<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contact"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ride_8_0189ff"
        >

        
        <ImageView
            android:id="@+id/iv_bank"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_width="36dp"
            android:layout_height="36dp">

        </ImageView>

        <TextView
            android:id="@+id/tv_bank"
            app:layout_constraintLeft_toRightOf="@id/iv_bank"
            app:layout_constraintTop_toTopOf="@id/iv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招商银行"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            >

        </TextView>

        <TextView
            android:id="@+id/tv_type"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:text="储蓄卡"
            app:layout_constraintLeft_toRightOf="@id/iv_bank"
            app:layout_constraintBottom_toBottomOf="@id/iv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            >

        </TextView>

        <LinearLayout
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/iv_bank"
            app:layout_constraintLeft_toRightOf="@id/iv_bank"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="26dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_qian"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="6222"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="22dp"
                android:background="@drawable/shape_ride_white_4dp"
                >

            </View>

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/shape_ride_white_4dp"
                >

            </View>

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/shape_ride_white_4dp"
                >

            </View>

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/shape_ride_white_4dp"
                >

            </View>

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="22dp"
                android:background="@drawable/shape_ride_white_4dp"
                >

            </View>

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/shape_ride_white_4dp"
                >

            </View>

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/shape_ride_white_4dp"
                >

            </View>

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/shape_ride_white_4dp"
                >

            </View>

            <TextView
                android:id="@+id/tv_hou"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="6222"
                android:textSize="20dp"
                android:layout_marginLeft="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
        

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>