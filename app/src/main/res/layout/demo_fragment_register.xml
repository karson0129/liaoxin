<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/toolbar_register"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleBarArrowColor="#292929"/>

    <TextView
        android:id="@+id/tv_register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_login_phone"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="60dp"
        android:text="账号密码登录"
        android:textSize="32dp"
        android:textColor="#292929"/>

    <TextView
        android:id="@+id/tv_area_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:layout_marginLeft="40dp"
        android:text="+86"
        android:textSize="16dp"
        android:textColor="#292929"
        >

    </TextView>

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/tv_area_code"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:layout_marginLeft="14dp"
        android:background="#E5E5E5"
        >

    </View>

    <EditText
        android:id="@+id/et_login_phone"
        app:layout_constraintLeft_toRightOf="@id/view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:hint="请输入手机号"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:paddingLeft="12dp"
        android:layout_marginRight="40dp"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:inputType="text"
        android:textColor="#292929"
        android:textColorHint="#AAAAAA"
        android:background="@color/white"
        />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_1dp"
        android:background="#F2F2F2"
        app:layout_constraintTop_toBottomOf="@id/et_login_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >

    </View>

    <EditText
        android:id="@+id/et_login_password"
        android:hint="输入登录密码"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:inputType="textPassword"
        android:textColor="#292929"
        android:textColorHint="#AAAAAA"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_1dp"
        android:background="#F2F2F2"
        app:layout_constraintTop_toBottomOf="@id/et_login_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >

    </View>

    <TextView
        android:id="@+id/btn_account"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="#AAAAAA"
        android:textSize="16dp"
        android:gravity="center"
        android:text="登录"
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_ride_8_f2f2f2"
        />

    <TextView
        android:id="@+id/tv_wangji_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#292929"
        android:textSize="14dp"
        android:text="忘记密码"
        app:layout_constraintLeft_toLeftOf="@id/btn_account"
        app:layout_constraintTop_toBottomOf="@id/btn_account"
        android:layout_marginTop="20dp"
        >

    </TextView>
    
    <TextView
        android:id="@+id/tv_phone_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号登录"
        android:textSize="14dp"
        android:textColor="#292929"
        app:layout_constraintRight_toRightOf="@id/btn_account"
        app:layout_constraintTop_toBottomOf="@id/btn_account"
        android:layout_marginTop="20dp"
        >

    </TextView>

<!--    ===============================================================-->

    <EditText
        android:id="@+id/et_login_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        android:hint="@string/em_login_name_hint"
        android:visibility="gone"
        style="@style/em_login_et_input" />

    <EditText
        android:id="@+id/et_login_pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_name"
        app:layout_constraintBottom_toTopOf="@id/et_login_pwd_confirm"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:hint="@string/em_login_password_hint"
        android:visibility="gone"
        style="@style/em_login_et_input"/>

    <EditText
        android:id="@+id/et_login_pwd_confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_pwd"
        app:layout_constraintBottom_toTopOf="@id/cb_select"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:hint="@string/em_register_password_confirm_hint"
        android:visibility="gone"
        style="@style/em_login_et_input"/>

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:padding="3dp"
        android:layout_marginTop="@dimen/em_margin_10"
        app:layout_constraintTop_toBottomOf="@id/et_login_pwd_confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        android:button="@drawable/demo_cb_agreement_select"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/tv_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/cb_select"
        app:layout_constraintTop_toTopOf="@id/cb_select"
        app:layout_constraintBottom_toBottomOf="@id/cb_select"
        android:layout_marginLeft="5dp"
        android:text="@string/em_login_agreement"
        android:textSize="12sp"
        android:visibility="gone"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_agreement"
        style="@style/em_login_btn"
        android:visibility="gone"
        android:text="@string/em_register_btn"
        android:layout_marginTop="@dimen/em_margin_20"/>

</androidx.constraintlayout.widget.ConstraintLayout>